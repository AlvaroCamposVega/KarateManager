<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    tools:context=".StrategyActivity">
    <TextView
        android:id="@+id/strategyInfoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_black_italic"
        android:gravity="center"
        android:text="@string/label_strategy_information"
        android:textColor="#292929"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/strategyInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/event_stripped_light_style"
        android:layout_marginTop="8dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/strategyInfoTitle"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/strategyInfoTarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black_italic"
            android:text="Rafael Aghayev"
            android:textColor="#292929"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <TextView
            android:id="@+id/strategyInfoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.8dp"
            android:fontFamily="@font/lato_regular"
            android:text="Kumite"
            android:textColor="@color/primaryTextColor"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        <TextView
            android:id="@+id/strategyInfoDesc"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/raleway_regular"
            android:text="Empezamos suave y poco a poco vamos tirando Kizami para despistar y abrir por abajo."
            android:textColor="@color/primaryTextColor"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/strategyInfoTarget">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/strategyBackBtn"
        style="@style/strategyBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/strategyInfoEditBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/strategyInfoEditBtn"
        style="@style/strategyEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toTopOf="@+id/strategyInfoDeleteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_create_24"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/strategyInfoDeleteBtn"
        style="@style/strategyDeleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_delete_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>